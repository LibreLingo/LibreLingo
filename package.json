{
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "web": "yarn workspace web",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "percypress": "KNAPSACK_PRO_TEST_FILE_PATTERN=\"cypress/integration/**/*.{feature,features}\" percy exec -- $(npm bin)/knapsack-pro-cypress",
    "test": "run-p --race \"web dev\" percypress",
    "stylefix": "yarn workspaces run prettierfix && yarn workspaces run eslintfix"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/bulma",
      "**/bulma/**",
      "**/@openfonts/**",
      "**/svelte/**",
      "svelte/**",
      "svelte",
      "**/svelte"
    ]
  },
  "nyc": {
    "report-dir": "cypress-coverage",
    "extension": [
      ".js",
      ".svelte"
    ],
    "all": true,
    "cache": false
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}
