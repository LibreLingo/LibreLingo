{
  "database": {
    "production": {
      "signUpEndpoint": "https://auth.librelingo.app/register",
      "local": "localData",
      "remote": "https://sync.librelingo.app",
      "auth": {
        "expireDays": 150
      },
      "maxNumberOfListeners": 5000
    },
    "development": {
      "signUpEndpoint": "http://localhost:8000/register",
      "local": "localDataTesting",
      "remote": "http://localhost:5984/",
      "auth": {
        "expireDays": 1
      },
      "maxNumberOfListeners": 5000
    }
  },
  "tokens": {
    "animationDelayShort": 50,
    "animationDelayRegular": 350,
    "animationDurationShort": 100,
    "animationDurationRegular": 300
  },
  "cypressTokens": {
    "animationDelayShort": 2,
    "animationDelayRegular": 2,
    "animationDurationShort": 1,
    "animationDurationRegular": 1
  }
}
